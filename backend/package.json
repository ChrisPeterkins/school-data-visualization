{
  "name": "@pa-school-data/backend",
  "version": "1.0.0",
  "description": "Backend API for PA School Data Visualization",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "data:import": "tsx src/scripts/importData.ts",
    "data:process-schools": "tsx src/scripts/processSchools.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.6.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.5",
    "fastify": "^4.25.1",
    "pino": "^8.17.1",
    "pino-pretty": "^10.3.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
